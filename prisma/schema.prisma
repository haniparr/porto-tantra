generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  EDITOR
}

enum Category {
  NEWS
  INDUSTRY_INSIGHTS
  CASE_STUDY
  TUTORIAL
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPost {
  id            String    @id @default(cuid())
  title         String
  slug          String    @unique
  excerpt       String
  content       String
  featuredImage String?
  category      Category  @default(NEWS)
  tags          String[]
  publishedDate DateTime?
  readTime      String?
  featured      Boolean   @default(false)
  published     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Project {
  id            String           @id @default(cuid())
  client        String
  slug          String           @unique
  year          String
  services      String[]
  thumbnail     String
  logo          String?
  sections      ProjectSection[]
  credits       ProjectCredit[]
  testimonial   Testimonial?     @relation(fields: [testimonialId], references: [id])
  testimonialId String?          @unique
  featured      Boolean          @default(false)
  published     Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model ProjectSection {
  id          String   @id @default(cuid())
  title       String
  description String
  images      String[]
  order       Int      @default(0)
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
}

model ProjectCredit {
  id        String  @id @default(cuid())
  name      String
  role      String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
}

model Testimonial {
  id          String    @id @default(cuid())
  clientName  String
  company     String
  position    String
  content     String
  avatar      String?
  rating      Int       @default(5)
  project     Project?
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model WorkExperience {
  id           String   @id @default(cuid())
  company      String
  role         String
  year         String
  achievements String
  order        Int      @default(0)
  published    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  name      String
  logo      String?
  order     Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
